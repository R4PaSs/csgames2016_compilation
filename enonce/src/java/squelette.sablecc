/* Grammar of Mpire. eMpirical Procedural Idiom for Robust Execution */
Language mpire;

Lexer

l = 'a'..'z'|'A'..'Z'|'_';
d = '0'..'9';
id = l (l|d)*;
int = d+;
char = '\'' Any;
str = '"' (Any - '"')* '"';
comment = '//' (Any - #10)* #10?;
blank = ' ' | #10 | #9 | comment;

Ignored blank;

Parser

prog = stmt prog | stmt;

stmt = 
	{print:} 'print' expr |
	{printstr:} 'print' str |
	{stmts:} '(' prog ')' ;

expr = 
	{int:} int ;

